    <update id="updateSchedule" parameterType="codedriver.framework.deploy.dto.schedule.DeployScheduleVo">
        UPDATE `deploy_schedule`
        SET `name`               = #{name},
            `begin_time`         = #{beginTime},
            `end_time`           = #{endTime},
            `cron`               = #{cron},
            `is_active`          = #{isActive},
            `config`             = #{configStr},
            `lcd`                = NOW(3),
            `lcu`                = #{lcu}
        WHERE `id` = #{id}
    </update>

