    <insert id="insertSchedule" parameterType="codedriver.framework.deploy.dto.schedule.DeployScheduleVo">
        INSERT INTO `deploy_schedule` (
            `id`,
            `uuid`,
            `name`,
            `begin_time`,
            `end_time`,
            `cron`,
            `is_active`,
            `config`,
            `fcd`,
            `fcu`,
            `lcd`,
            `lcu`,
            `type`,
            `app_system_id`,
            `app_module_id`,
            `pipeline_id`,
            `pipeline_type`
        )
        VALUES
        (
            #{id},
            #{uuid},
            #{name},
            #{beginTime},
            #{endTime},
            #{cron},
            #{isActive},
            #{configStr},
            NOW(3),
            #{fcu},
            NOW(3),
            #{fcu},
            #{type},
            #{appSystemId},
            #{appModuleId},
            #{pipelineId},
            #{pipelineType}
        )
    </insert>

