<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="codedriver.module.deploy.dao.mapper.DeployPipelineTemplateMapper">

    <select id="checkPinelineTemplateNameIsRepeat" parameterType="codedriver.framework.deploy.dto.pipelinetemplate.DeployPipelineTemplateVo" resultType="java.lang.Long">
        SELECT `id` FROM `deploy_pipeline_template` WHERE `name` = #{name} AND `id` != #{id} LIMIT 1
    </select>

    <select id="getPinelineTemplateIsActiveByIdForUpdate" parameterType="java.lang.Long" resultType="java.lang.Integer">
        SELECT `is_active` FROM `deploy_pipeline_template` WHERE `id` = #{value} FOR UPDATE
    </select>

    <select id="getPinelineTemplateById" parameterType="java.lang.Long" resultType="codedriver.framework.deploy.dto.pipelinetemplate.DeployPipelineTemplateVo">
        SELECT
            `id`,
            `name`,
            `description`,
            `type_id` AS typeId,
            `is_active` AS isActive,
            `config`,
            `fcd`,
            `fcu`,
            `lcd`,
            `lcu`
        FROM `deploy_pipeline_template`
        WHERE `id` = #{value}
    </select>

    <select id="getPinelineTemplateCount" parameterType="codedriver.framework.deploy.dto.pipelinetemplate.DeployPipelineTemplateVo" resultType="int">
        SELECT
            COUNT(1)
        FROM `deploy_pipeline_template`
        <where>
        <if test="keyword != null and keyword != ''">
            AND (`name` LIKE concat('%', #{keyword}, '%') OR `description` LIKE concat('%', #{keyword}, '%'))
        </if>
        <if test="typeId != null">
            AND `type_id` = #{typeId}
        </if>
        <if test="isActive != null">
            AND `is_active` = #{isActive}
        </if>
        </where>
    </select>

    <select id="getPinelineTemplateList" parameterType="codedriver.framework.deploy.dto.pipelinetemplate.DeployPipelineTemplateVo" resultType="codedriver.framework.deploy.dto.pipelinetemplate.DeployPipelineTemplateVo">
        SELECT
            `id`,
            `name`,
            `description`,
            `type_id` AS typeId,
            `is_active` AS isActive,
            `fcd`,
            `fcu`,
            `lcd`,
            `lcu`
        FROM `deploy_pipeline_template`
        <where>
        <if test="keyword != null and keyword != ''">
            AND (`name` LIKE concat('%', #{keyword}, '%') OR `description` LIKE concat('%', #{keyword}, '%'))
        </if>
        <if test="typeId != null">
            AND `type_id` = #{typeId}
        </if>
        <if test="isActive != null">
            AND `is_active` = #{isActive}
        </if>
        </where>
        ORDER BY `id` DESC
        LIMIT #{startNum}, #{pageSize}
    </select>

    <select id="checkPinelineTemplateIdListIsExists" parameterType="java.util.List" resultType="java.lang.Long">
        SELECT `id` FROM `deploy_pipeline_template` WHERE `id` IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <insert id="insertPinelineTemplate" parameterType="codedriver.framework.deploy.dto.pipelinetemplate.DeployPipelineTemplateVo">
        INSERT INTO `deploy_pipeline_template` (
            `id`,
            `name`,
            `description`,
            `type_id`,
            `is_active`,
            `config`,
            `fcd`,
            `fcu`,
            `lcd`,
            `lcu`
        )
        VALUES
        (
            #{id},
            #{name},
            #{description},
            #{typeId},
            #{isActive},
            #{configStr},
            NOW(3),
            #{fcu},
            NOW(3),
            #{fcu}
        )
    </insert>

    <update id="updatePinelineTemplateById" parameterType="codedriver.framework.deploy.dto.pipelinetemplate.DeployPipelineTemplateVo">
        UPDATE `deploy_pipeline_template`
        SET
            `name` = #{name},
            `description` = #{description},
            `type_id` = #{typeId},
            `config` = #{configStr},
            `lcd` = NOW(3),
            `lcu` = #{lcu}
        WHERE `id` = #{id}
    </update>

    <update id="updatePinelineTemplateIsActiveById" parameterType="codedriver.framework.deploy.dto.pipelinetemplate.DeployPipelineTemplateVo">
        UPDATE `deploy_pipeline_template`
        SET
            `is_active` = !`is_active`,
            `lcd` = NOW(3),
            `lcu` = #{lcu}
        WHERE `id` = #{id}
    </update>

    <delete id="deletePinelineTemplateById" parameterType="java.lang.Long">
        DELETE FROM `deploy_pipeline_template` WHERE `id` = #{value}
    </delete>
</mapper>